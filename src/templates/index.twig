{% extends "_layouts/cp" %}
{% import "_includes/forms" as forms %}

{% do view.registerAssetBundle("superbig\\mailchimp\\assetbundles\\mailchimp\\MailChimpAsset") %}
{% do view.registerAssetBundle("superbig\\mailchimp\\assetbundles\\indexcpsection\\IndexCPSectionAsset") %}

{% set docsUrl = "https://github.com/sjelfull/mailchimp/blob/master/README.md" %}

{% set title = "MailChimp" %}

{% set pluginCpUrl = url('mailchimp') %}

{% set iconUrl = view.getAssetManager().getPublishedUrl('@superbig/mailchimp/assetbundles/indexcpsection/dist', true) ~ '/img/IndexRecord-icon.svg' %}

{% set extraPageHeaderHtml %}
    <div class="buttons">
        <a href="{{ pluginCpUrl }}" class="btn submit add icon">{{ "Click Me!"|t('mailchimp') }}</a>
    </div>
{% endset %}

{% set content %}
    <h2>{{ "IndexRecord CP Section body goes here"|t('mailchimp') }}</h2>
    <img src="{{ iconUrl }}" height="64" width="64" />
    <p class="textline"></p>
{% endset %}
